@page "/genres"
@rendermode InteractiveServer
@inherits MoviePortal.Components.Pages.GenresPage

<PageTitle>Thể loại</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h3 class="mb-0">Thể loại</h3>
  <button class="btn btn-primary" @onclick='NewGenre'>
    <span class="bi bi-plus-circle me-1"></span> Thêm thể loại
  </button>
</div>

<input class="form-control mb-3" placeholder="Tìm theo tên..." @bind="Q" @bind:event="oninput" />

<table class="table table-hover align-middle">
  <thead>
  <tr>
    <th style="width:90px">ID</th>
    <th>Tên</th>
    <th style="width:160px"></th>
  </tr>
  </thead>
  <tbody>
  @foreach (var g in Items)
  {
    <tr>
      <td>@g.Id</td>
      <td>@g.Name</td>
      <td class="text-end">
        <button class="btn btn-sm btn-outline-primary me-2" @onclick='() => EditGenre(g.Id)'>
          <span class="bi bi-pencil-square"></span> Sửa
        </button>
        <button class="btn btn-sm btn-outline-danger" @onclick='() => DeleteAsync(g.Id)'>
          <span class="bi bi-trash"></span> Xoá
        </button>
      </td>
    </tr>
  }
  </tbody>
</table>
