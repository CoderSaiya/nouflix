@page "/ops/storage"
@rendermode InteractiveServer
@using MoviePortal.Helpers
@inherits MoviePortal.Components.Pages.StoragePage

<PageTitle>Lưu trữ</PageTitle>

<h3 class="mb-3 d-flex align-items-center gap-2">
  <i class="bi bi-hdd-network"></i> Lưu trữ
</h3>

<ul class="nav nav-tabs mb-3">
  <li class="nav-item">
    <button class="nav-link @(Tab=="images"?"active":"")" @onclick='()=>SetTab("images")'>
      Ảnh
    </button>
  </li>
  <li class="nav-item">
    <button class="nav-link @(Tab=="videos"?"active":"")" @onclick='()=>SetTab("videos")'>
      Video
    </button>
  </li>
  <li class="nav-item">
    <button class="nav-link @(Tab=="upload"?"active":"")" @onclick='()=>SetTab("upload")'>
      Upload
    </button>
  </li>
</ul>

@if (Tab=="images")
{
  <div class="card">
    <div class="card-header">Ảnh</div>
    <div class="card-body">
      <div class="row g-2 align-items-end">
        <div class="col-3">
          <label class="form-label">MovieId</label>
          <input class="form-control" @bind="ImgMovieId" />
        </div>
        <div class="col-3">
          <label class="form-label">EpisodeId</label>
          <input class="form-control" @bind="ImgEpisodeId" />
        </div>
        <div class="col-3">
          <label class="form-label">Kind</label>
          <select class="form-select" @bind="ImgKind">
            <option value="">-- Tất cả --</option>
            @foreach (var k in ImgKinds) { <option value="@k">@k</option> }
          </select>
        </div>
        <div class="col-3">
          <label class="form-label">Từ khoá</label>
          <input class="form-control" placeholder="BlobName/Alt..." @bind="ImgQ" />
        </div>
        <div class="col-12">
          <button class="btn btn-primary mt-2" @onclick="SearchImagesAsync"><i class="bi bi-search"></i> Tìm</button>
        </div>
      </div>

      <div class="table-responsive mt-3">
        <table class="table table-sm align-middle">
          <thead>
            <tr>
              <th style="width:80px">Id</th>
              <th style="width:140px">Movie/Episode</th>
              <th style="width:110px">Kind</th>
              <th>Blob</th>
              <th style="width:110px">Size</th>
              <th style="width:140px"></th>
            </tr>
          </thead>
          <tbody>
            @foreach (var i in Images)
            {
              <tr>
                <td>@i.Id</td>
                <td>@(i.MovieId?.ToString() ?? "-") / @(i.EpisodeId?.ToString() ?? "-")</td>
                <td>@i.Kind</td>
                <td>
                  <div class="small text-muted">@i.Bucket / @i.ObjectKey</div>
                  @if (!string.IsNullOrEmpty(i.Alt))
                  {
                    <div class="small">@i.Alt</div>
                  }
                </td>
                <td>@FormatBytes(i.SizeBytes ?? 0)</td>
                <td class="text-end">
                  @if (!string.IsNullOrEmpty(StorageHelper.BuildUrl(i)))
                  {
                    <a class="btn btn-sm btn-outline-secondary me-2" href="@StorageHelper.BuildUrl(i)" target="_blank">Mở</a>
                  }
                  <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteImageAsync(i.Id)">
                    <i class="bi bi-trash"></i>
                  </button>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>
}
else if (Tab=="videos")
{
  <div class="card">
    <div class="card-header">Video</div>
    <div class="card-body">
      <div class="row g-2 align-items-end">
        <div class="col-2">
          <label class="form-label">MovieId</label>
          <input class="form-control" @bind="VidMovieId" />
        </div>
        <div class="col-2">
          <label class="form-label">EpisodeId</label>
          <input class="form-control" @bind="VidEpisodeId" />
        </div>
        <div class="col-3">
          <label class="form-label">Kind</label>
          <select class="form-select" @bind="VidKind">
            <option value="">-- Tất cả --</option>
            @foreach (var k in VidKinds) { <option value="@k">@k</option> }
          </select>
        </div>
        <div class="col-3">
          <label class="form-label">Quality</label>
          <select class="form-select" @bind="VidQuality">
            <option value="">-- Tất cả --</option>
            @foreach (var q in Qualities) { <option value="@q">@q</option> }
          </select>
        </div>
        <div class="col-2">
          <label class="form-label">Từ khoá</label>
          <input class="form-control" placeholder="Blob/Lang..." @bind="VidQ" />
        </div>

        <div class="col-12">
          <button class="btn btn-primary mt-2" @onclick="SearchVideosAsync"><i class="bi bi-search"></i> Tìm</button>
        </div>
      </div>

      <div class="table-responsive mt-3">
        <table class="table table-sm align-middle">
          <thead>
            <tr>
              <th style="width:80px">Id</th>
              <th style="width:140px">Movie/Episode</th>
              <th style="width:110px">Kind</th>
              <th style="width:110px">Quality</th>
              <th>Blob</th>
              <th style="width:110px">Size</th>
              <th style="width:220px"></th>
            </tr>
          </thead>
          <tbody>
            @foreach (var v in Videos)
            {
              <tr>
                <td>@v.Id</td>
                <td>@(v.MovieId?.ToString() ?? "-") / @(v.EpisodeId?.ToString() ?? "-")</td>
                <td>@v.Kind</td>
                <td>@v.Quality</td>
                <td>
                  <div class="small text-muted">@v.Bucket / @v.ObjectKey</div>
                  @if (!string.IsNullOrEmpty(v.Language))
                  {
                      <div class="small">Lang: @v.Language</div>
                  }
                </td>
                <td>@FormatBytes(v.SizeBytes ?? 0)</td>
                <td class="text-end">
                  <button class="btn btn-sm btn-outline-secondary me-2" @onclick="() => PreviewAsync(v)">
                    <i class="bi bi-play-circle"></i> SAS 10’
                  </button>
                  <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteVideoAsync(v.Id)">
                    <i class="bi bi-trash"></i>
                  </button>
                </td>
              </tr>
            }
          </tbody>
        </table>
      </div>

      @if (!string.IsNullOrEmpty(PreviewUrl))
      {
        <div class="alert alert-info mt-2">
          Xem thử (SAS 10’): <a href="@PreviewUrl" target="_blank">@PreviewUrl</a>
        </div>
        <video controls style="width:100%;max-height:420px;">
          <source src="@PreviewUrl" type="application/vnd.apple.mpegurl">
          Trình duyệt của bạn có thể không hỗ trợ HLS trực tiếp.
        </video>
      }
    </div>
  </div>
}
else if (Tab=="upload")
{
  <div class="row g-3">
    <!-- Upload ảnh -->
    <div class="col-lg-6">
      <div class="card h-100">
        <div class="card-header">Upload ảnh (public)</div>
        <div class="card-body">
          <div class="row g-2">
            <div class="col-6">
              <label class="form-label">Container ảnh</label>
              <input class="form-control" @bind="ImgContainer" />
            </div>
            <div class="col-3">
              <label class="form-label">MovieId</label>
              <input class="form-control" @bind="UpImgMovieId" />
            </div>
            <div class="col-3">
              <label class="form-label">EpisodeId</label>
              <input class="form-control" @bind="UpImgEpisodeId" />
            </div>
            <div class="col-6">
              <label class="form-label">Kind</label>
              <select class="form-select" @bind="UpImgKind">
                @foreach (var k in ImgKinds) { <option value="@k">@k</option> }
              </select>
            </div>
            <div class="col-6">
              <label class="form-label">Alt</label>
              <input class="form-control" @bind="UpImgAlt" />
            </div>
            <div class="col-12">
              <InputFile OnChange="OnImgSelected" accept="image/*" />
            </div>
            <div class="col-12">
              <button class="btn btn-primary" disabled="@(UpImgFile is null)" @onclick="UploadImageAsync">
                <i class="bi bi-upload"></i> Upload
              </button>
            </div>
            @if (!string.IsNullOrEmpty(UpImgResult))
            {
              <div class="col-12"><div class="alert alert-success mt-2">@UpImgResult</div></div>
            }
          </div>
        </div>
      </div>
    </div>

    <!-- Upload video -->
    <div class="col-lg-6">
      <div class="card h-100">
        <div class="card-header">Upload video (private)</div>
        <div class="card-body">
          <div class="row g-2">
            <div class="col-6">
              <label class="form-label">Container video</label>
              <input class="form-control" @bind="VidContainer" />
            </div>
            <div class="col-3">
              <label class="form-label">MovieId</label>
              <input class="form-control" @bind="UpVidMovieId" />
            </div>
            <div class="col-3">
              <label class="form-label">EpisodeId</label>
              <input class="form-control" @bind="UpVidEpisodeId" />
            </div>
            <div class="col-6">
              <label class="form-label">Kind</label>
              <select class="form-select" @bind="UpVidKind">
                @foreach (var k in VidKinds) { <option value="@k">@k</option> }
              </select>
            </div>
            <div class="col-6">
              <label class="form-label">Quality</label>
              <select class="form-select" @bind="UpVidQuality">
                @foreach (var q in Qualities) { <option value="@q">@q</option> }
              </select>
            </div>
            <div class="col-6">
              <label class="form-label">Language</label>
              <input class="form-control" @bind="UpVidLang" />
            </div>
            <div class="col-6">
              <label class="form-label">Status</label>
              <select class="form-select" @bind='UpVidStatus'>
                @foreach (var s in Statuses) { <option value="@s">@s</option> }
              </select>
            </div>
            <div class="col-12">
              <InputFile OnChange="OnVidSelected" />
            </div>
            <div class="col-12">
              <button class="btn btn-primary" disabled="@(UpVidFile is null)" @onclick="UploadVideoAsync">
                <i class="bi bi-upload"></i> Upload
              </button>
            </div>
            @if (!string.IsNullOrEmpty(UpVidResult))
            {
              <div class="col-12"><div class="alert alert-success mt-2">@UpVidResult</div></div>
            }
          </div>
        </div>
      </div>
    </div>
  </div>
}
