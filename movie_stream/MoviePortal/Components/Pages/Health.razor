@page "/ops/health"
@rendermode InteractiveServer
@inherits MoviePortal.Components.Pages.HealthPage

<PageTitle>Tình trạng hệ thống</PageTitle>

<h3 class="mb-3 d-flex align-items-center gap-2">
  <i class="bi bi-heart-pulse"></i> Tình trạng hệ thống
</h3>

<div class="mb-3">
  <button class="btn btn-outline-primary" @onclick="RunAsync">
    <i class="bi bi-arrow-repeat me-1"></i> Kiểm tra lại
  </button>
</div>

@if (Loading)
{
  <div class="alert alert-info">Đang kiểm tra...</div>
}
else if (Report is null)
{
  <div class="alert alert-warning">Chưa có báo cáo.</div>
}
else
{
  <div class="card mb-3">
    <div class="card-header">Thông tin hệ thống</div>
    <div class="card-body">
      <div class="row">
        <div class="col-md-4"><div class="small text-muted">Environment</div><div class="fw-semibold">@Report.Info.Environment</div></div>
        <div class="col-md-4"><div class="small text-muted">Máy chủ</div><div class="fw-semibold">@Report.Info.MachineName</div></div>
        <div class="col-md-4"><div class="small text-muted">OS</div><div class="fw-semibold">@Report.Info.OSVersion</div></div>
        <div class="col-md-4 mt-2"><div class="small text-muted">Framework</div><div class="fw-semibold">@Report.Info.Framework</div></div>
        <div class="col-md-4 mt-2"><div class="small text-muted">Kiến trúc</div><div class="fw-semibold">@Report.Info.ProcessArchitecture</div></div>
        <div class="col-md-4 mt-2"><div class="small text-muted">Uptime</div><div class="fw-semibold">@FormatUptime(Report.Info.Uptime)</div></div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header">Các hạng mục kiểm tra</div>
    <div class="card-body p-0">
      <table class="table table-sm mb-0 align-middle">
        <thead>
          <tr>
            <th>Hạng mục</th>
            <th>Trạng thái</th>
            <th>Chi tiết</th>
            <th class="text-end">Thời gian (ms)</th>
          </tr>
        </thead>
        <tbody>
        @foreach (var c in Report.Checks)
        {
          <tr class="@RowClass(c.State)">
            <td>@c.Name</td>
            <td>@Badge(c.State)</td>
            <td>@c.Message</td>
            <td class="text-end">@c.DurationMs</td>
          </tr>
        }
        </tbody>
      </table>
    </div>
  </div>
}
